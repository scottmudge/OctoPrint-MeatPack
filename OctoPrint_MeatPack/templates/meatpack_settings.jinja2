<form class="form-horizontal">

    <h2>MeatPack Settings</h2>
    <h4>General</h4>
    <fieldset>
        <div class="control-group">
            <div class="controls">
                <label class="checkbox">
                    <input type="checkbox" data-bind="checked: settings.plugins.meatpack.enableMeatPack">
                    Enable G-Code Compression
                </label>
            </div>
            <div class="controls">
                <label class="checkbox">
                    <input type="checkbox" data-bind="checked: settings.plugins.meatpack.omitSpaces">
                    Remove All Whitespace ("G" Commands Only)
                </label>
            </div>
            <div class="controls">
                <label class="checkbox">
                    <input type="checkbox" data-bind="checked: settings.plugins.meatpack.logTransmissionStats">
                    Show Transmission Statistics&hellip;
                </label>
            </div>
            <div class="controls" data-bind="visible:settings.plugins.meatpack.logTransmissionStats">
                in <select data-bind="value: settings.plugins.meatpack.logTransmissionStatsType">
                    <option value="state">Inside State panel</option>
                    <option value="standalone">Standalone panel</option>
                </select>
            </div>
        </div>
    </fieldset>
    <h4>Miscellaneous & Easter Eggs</h4>
    <fieldset>
        <div class="control-group">
            <div class="controls">
                <label class="checkbox">
                    <input type="checkbox" data-bind="checked: settings.plugins.meatpack.playSongOnPrintComplete">
                    Play the "Meatball" Song on Print Completion (M84 GCode support required)
                </label>
            </div>
        </div>
    </fieldset>
</form>